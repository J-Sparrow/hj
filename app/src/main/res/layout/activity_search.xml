<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bluetooth_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择要连接的设备"
        android:textColor="#10d290"
        android:textSize="@dimen/font_a5"
        android:layout_margin="@dimen/padding_small_a"
        />


    <ImageView
        android:id="@+id/bluetooth_close"
        android:layout_width="@dimen/setting_btn_size"
        android:layout_height="@dimen/setting_btn_size"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/padding_micro_d"
        android:background="@drawable/close"
        />

    <ListView
        android:id="@+id/search_listview"
        android:layout_below="@id/bluetooth_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_small_a"
        android:scrollbars="none"
        android:dividerHeight="@dimen/padding_micro_d"
        android:divider="#ffffff"
        >
    </ListView>

</RelativeLayout>


    



